# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/realestate_crm
# For development with SQLite fallback (if Postgres not available)
# DATABASE_URL=

# JWT Secret (Change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# Server Configuration
NODE_ENV=development
PORT=5000

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@your-domain.com

# Alternative Email Configuration (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=your-email@gmail.com

# WhatsApp/SMS Configuration (Twilio)
TWILIO_SID=your-twilio-account-sid
TWILIO_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Alternative SMS Configuration (Gupshup)
# GUPSHUP_API_KEY=your-gupshup-api-key
# GUPSHUP_SOURCE_NUMBER=your-source-number

# Payment Configuration
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Google Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:5000/auth/google/callback
# Base64 encoded JSON credentials for service account
GOOGLE_CALENDAR_CREDENTIALS_JSON=base64-encoded-service-account-json

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
# 10MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# AWS S3 (Optional - for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Supabase Storage (Alternative to S3)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Configuration (Optional - for session storage and caching)
REDIS_URL=redis://localhost:6379

# Application URLs
APP_URL=http://localhost:5000
API_URL=http://localhost:5000/api
CLIENT_URL=http://localhost:5000

# For production with custom domain
# APP_URL=https://your-domain.com
# API_URL=https://your-domain.com/api
# CLIENT_URL=https://your-domain.com

# Webhook URLs (for external integrations)
WEBHOOK_BASE_URL=http://localhost:5000/api/webhooks

# Property Portal Integration (Example - for Magicbricks, 99acres via Zapier)
PROPERTY_PORTAL_WEBHOOK_SECRET=your-webhook-secret

# Monitoring and Logging (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5000
# For production with multiple domains:
# CORS_ORIGIN=https://your-domain.com,https://app.your-domain.com

# Security Headers
HELMET_ENABLED=true
FORCE_HTTPS=false
# Set to true in production

# Background Jobs (Optional - for email queues, automation)
BULL_REDIS_URL=redis://localhost:6379

# Development Tools
DEBUG=app:*
VITE_API_URL=http://localhost:5000/api

# Docker Development
POSTGRES_DB=realestate_crm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Multi-tenant Configuration
ENABLE_SUBDOMAIN_ROUTING=false
DEFAULT_TENANT_STATUS=trial
TRIAL_PERIOD_DAYS=14

# Feature Flags
ENABLE_AUTOMATION=true
ENABLE_PDF_GENERATION=true
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_PAYMENT_INTEGRATION=true

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID
MIXPANEL_TOKEN=your-mixpanel-token

# Map Integration (Optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token
